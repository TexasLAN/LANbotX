<html>
  <head>
    <title>LANBotX</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"/>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <body>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <table class="table">
              <tr>
                <th>Regex</th>
                <th>Response</th>
                <th>Remove?</th>
              </tr>
              {{#each responses}}
                <tr>
                  <td>{{regex}}</td>
                  <td>{{reply}}</td>
                  <td><a href="/delete/{{id}}" class="glyphicon glyphicon-remove-circle"></a></td>
                </tr>
              {{/each}}
            </table>
            <h3>Add a new response</h3>
            <form class="form-inline" method="POST">
              <div class="form-group">
                <label class="sr-only" for="regex">Reply</label>
                <input type="text" class="form-control" name="regex" id="regex" placeholder="Regex">
              </div>
              <div class="form-group">
                <label class="sr-only" for="reply">Reply</label>
                <input type="text" class="form-control" name="reply" id="reply" placeholder="Reply">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </body>
  </head>
</html>
